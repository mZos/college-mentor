<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dull_white"
    tools:context=".activity.GithubAuthActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:src="@drawable/github"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_with_github"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/etGithubEmail"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="28dp"
        android:hint="@string/email_address"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:maxLength="25"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:textColorHint="@color/common_google_signin_btn_text_light_default"
        android:background="@drawable/about_page_border"/>

    <Button
        android:id="@+id/btnGithubLogin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="@string/github_login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/about_page_border"
        android:layout_marginStart="28dp"/>

</LinearLayout>